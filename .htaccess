<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # N√ÉO reescrever arquivos e pastas reais (assets, uploads, etc)
    RewriteCond %{REQUEST_FILENAME} -f [OR]
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]

    # Reescreve o resto para o CodeIgniter
    RewriteRule ^(.*)$ index.php/$1 [L]
</IfModule>
